{
  "name": "@blinks/backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "debug": "node --inspect-brk ./src/index.js",
    "dev": "cross-env NODE_ENV=development tsx watch ./src/index.ts --ignore ./frontend",
    "serve": "cross-env NODE_ENV=production node ./dist/index.js",
    "build:dev": "rimraf ./dist && tsc && cp .env ./dist/.env",
    "build": "rimraf ./dist && tsc -b",
    "start:migrate:prod": "prisma migrate deploy && npm run serve",
    "typecheck": "tsc --noEmit",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:generate": "prisma generate"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@blinks/shared": "*",
    "@prisma/client": "^4.13.0",
    "@shopify/shopify-api": "^7.5.1",
    "@shopify/shopify-app-express": "^2.2.0",
    "@shopify/shopify-app-session-storage-postgresql": "1.1.4",
    "@shopify/shopify-app-session-storage-prisma": "^1.0.0",
    "@types/express": "^4.17.14",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "express-status-monitor": "^1.3.4",
    "prisma": "^4.13.0",
    "serve-static": "^1.14.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "rimraf": "^3.0.2",
    "tsx": "^3.13.0"
  }
}