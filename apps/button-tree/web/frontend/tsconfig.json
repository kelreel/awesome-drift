{
    "compilerOptions": {
        "jsx": "react",
        "target": "es2018",
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true,
        "removeComments": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules"
    ],
}