{
    "networkMode": "bridge",
    "family": "ShopifyApp_Countdown_prod",
    "executionRoleArn": "arn:aws:iam::376953470933:role/ecsTaskExecutionRole",
    "placementConstraints": [],
    "volumes": [],
    "containerDefinitions": [
        {
            "name": "countdown",
            "image": "376953470933.dkr.ecr.us-east-1.amazonaws.com/shopify-app/countdown:prod",
            "cpu": 0,
            "memory": 192,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {"name": "HOST", 				        "value": "https://countdown-timer.getsitecontrol.com/"},
                {"name": "BACKEND_PORT", 				"value": "3000"},
                {"name": "SCOPES", 				        "value": "read_themes"},
                
                {"name": "BILLING_TEST", 				"value": "false"},
                {"name": "SHOPIFY_TIMER_BLOCK_ID", 		"value": "58dc5b1b-43d2-4209-b1f3-52aff31643ed"}
            ],
            "secrets":[ 
                {"name": "SHOPIFY_API_KEY", 			"valueFrom": "/Deploy/ShopifyApps/prod/SHOPIFY_API_KEY"},
                {"name": "SHOPIFY_API_SECRET", 			"valueFrom": "/Deploy/ShopifyApps/prod/SHOPIFY_API_SECRET"},

                {"name": "POSTGRES_URL", 				"valueFrom": "/Deploy/ShopifyApps/prod/POSTGRES_URL"}
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/shopify-apps",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
}

